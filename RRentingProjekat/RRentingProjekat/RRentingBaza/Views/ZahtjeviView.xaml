<Page
    x:Class="RRentingProjekat.RRentingBaza.Views.ZahtjeviView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RRentingProjekat.RRentingBaza.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewmodels="using:RRentingProjekat.RRentingBaza.ViewModels"
    xmlns:models="using:RRentingProjekat.RRentingBaza.Models"
    xmlns:triggers="using:RRentingProjekat.RRentingBaza.Helper"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="WhiteSmoke" Margin="0,0,0,0">
        <GridView x:Name="gridView" HorizontalAlignment="Left" Margin="141,157,0,0" VerticalAlignment="Top" Width="100"/>
        <CheckBox x:Name="checkBox1" Content="Pospremanje sobe" HorizontalAlignment="Left" Margin="102,78,0,0" VerticalAlignment="Top" FontSize="20" IsChecked="True"/>
        <CheckBox x:Name="checkBox2" Content="Promjena posteljine" HorizontalAlignment="Left" Margin="102,115,0,0" VerticalAlignment="Top" FontSize="20"/>
        <CheckBox x:Name="checkBox3" Content="Bacanje otpada" HorizontalAlignment="Left" Margin="102,152,0,0" VerticalAlignment="Top" FontSize="20" Width="179"/>
        <CheckBox x:Name="checkBox4" Content="Servis" HorizontalAlignment="Left" Margin="102,185,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="DodajZahtjev" Content="Dodaj Zahtjeve" Margin="0,200,0,0" VerticalAlignment="Center" FontSize="20" HorizontalAlignment="Center">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="DarkRed" Offset="0"/>
                    <GradientStop Color="{ThemeResource SystemAltMediumLowColor}" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>


        <TextBlock FontSize="18.667" FontWeight="Bold" Margin="0,0,0,0"  VerticalAlignment="Top" HorizontalAlignment="Right" Width="93">
            <TextBlock.Foreground>
                <SolidColorBrush Color="RosyBrown"/>
            </TextBlock.Foreground>RRenting</TextBlock>

    </Grid>
</Page>
